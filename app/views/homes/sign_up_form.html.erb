<div class="card mx-3 p-3">
 <h3 class="text-center">Please fill these Details</h3>
<% if @user.errors.full_messages.any? %>
  <div class="alert alert-danger">
    <ul class="list-group">
      <% @user.errors.full_messages.each do |error_message| %>
        <li class="list-group-item"><%= error_message %> </li>
      <% end %>
     </ul>
  </div>
<% end %>
<%= form_for(@user,url: sign_up_user_path(), class: 'form-group') do |f|%>
  <div class="form-group">
    <label for="user_full_name"> Full Name </label>
    <%= f.text_field :full_name, class: "form-control",placeholder: "Enter your full name"%>
  </div>
  <div class="form-group">
    <label for="user_full_name"> Mobilenumber </label>
    <%= f.text_field :mobilenumber, class: "form-control",placeholder: "Enter your mobilenumber"%>
  </div>
  <div class="form-group">
    <label for="user_full_name"> Email Address </label>
    <%= f.email_field :email, class: "form-control",placeholder: "Enter your email address"%>
  </div>
  <div class="form-group">
    <label for="user_full_name"> Password </label>
    <%= f.password_field :password, class: "form-control",placeholder: "Enter your password"%>
  </div>
    <div class="form-group">
    <label for="user_full_name"> Repeat Password </label>
    <%= f.password_field :password_confirmation, class: "form-control",placeholder: "Please confirm your password"%>
  </div>
  <div class="form-group">
    <button class="btn btn-primary">Sign Up</button>
  </div>
<% end %>
</div>

