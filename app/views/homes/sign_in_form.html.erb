<div class="card mx-3 p-3">
 <h3 class="text-center">Please fill these Details</h3>
<%= form_with(modal: :user,url: sign_in_user_path(), class: 'form-group',local: true) do |f|%>
  <div class="form-group">
    <label for="user_full_name"> Email Address </label>
    <%= f.email_field :email, class: "form-control",placeholder: "Enter your email address"%>
  </div>
  <div class="form-group">
    <label for="user_full_name"> Password </label>
    <%= f.password_field :password, class: "form-control",placeholder: "Enter your password"%>
  </div>
  <div class="form-group">
    <button class="btn btn-primary">Sign In</button>
  </div>
<% end %>
</div>